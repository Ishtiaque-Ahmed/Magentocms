<?xml version="1.0"?>
<config>
    <!--this code use for create a tab in left site in configuration page-->
    
    <!--this is a section under a tab-->
    <sections>

        <harriswebworks_theme translate="label" module="harriswebworks_theme">
            <!--this is section label and uorder info in left site-->
            <label>Misc Config Settings</label>
            <tab>harriswebworks</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            
                       
            <!--this is the content page which will show when click on left site section-->
            <groups>
                <info>
                    <frontend_model>harriswebworks_theme/adminhtml_about</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </info>
                
                <!--this is one of the section. you can create as many you need.-->
                <theme translate="label">
                    <!--this is the title and order info of a sesection.-->
                    <label>Tax Redumption For Customer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <!--this is the field container-->
                    <fields>
                        <!--this is the input field. you can create as many as you need.-->
                        <enable_taxredumption>
                            <label>Customer Ids</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Add the customer ids separared with comma (,)</comment>
                            
                        </enable_taxredumption>
                        
                        
                        
                        
                    </fields>
                </theme>
				<amp translate="label">
					<label>AMP Page Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
					<fields>
                        <!--this is the input field. you can create as many as you need.-->
                        <active translate="label">
						  <label>Enabled</label>
						  <frontend_type>select</frontend_type>
						  <source_model>adminhtml/system_config_source_yesno</source_model>
						  <sort_order>2</sort_order>
						  <show_in_default>1</show_in_default>
						  <show_in_website>1</show_in_website>
						  <show_in_store>1</show_in_store>
						</active>
						<home_page translate="label">
                            <label>Select Home Page</label>
                            <comment>If not selected default page will be displayed</comment>
                            <frontend_type>select</frontend_type>
							<source_model>harriswebworks_theme/cmspage</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </home_page>
                        <amp_page translate="label">
                            <label>Other Amp Pages</label>
                            <comment>Set other amp enabled pages </comment>
                            <frontend_type>multiselect</frontend_type>
							<source_model>harriswebworks_theme/urltype</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </amp_page>
                        <cus_page translate="label">
                            <label>Custom Pages</label>
                            <comment>Write custome page route, For CMS page CMS_ID (EX. PAGE_1).</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cus_page>
                        <analytic translate="label">
                            <label>Analytics Account</label>
                            
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </analytic>
                        
                    </fields>
				</amp>
				<amp_design>
					<label>Custom Css</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
				<cus_css_home translate="label">
                            <label>Custom CSS For Home</label>
                            
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cus_css_home>
						<cus_css_category translate="label">
                            <label>Custom CSS For Category</label>
                            
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cus_css_category>
						<cus_css_product translate="label">
                            <label>Custom CSS For Product</label>
                            
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cus_css_product>
						</fields>
				</amp_design>
				<amp_device>
				<label>AMP on Device</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<active_phone translate="label">
						  <label>Enabled on Mobile</label>
						  <frontend_type>select</frontend_type>
						  <source_model>adminhtml/system_config_source_yesno</source_model>
						  <sort_order>1</sort_order>
						  <show_in_default>1</show_in_default>
						  <show_in_website>1</show_in_website>
						  <show_in_store>1</show_in_store>
						</active_phone>
						<active_tablet translate="label">
						  <label>Enabled on Tablet</label>
						  <frontend_type>select</frontend_type>
						  <source_model>adminhtml/system_config_source_yesno</source_model>
						  <sort_order>2</sort_order>
						  <show_in_default>1</show_in_default>
						  <show_in_website>1</show_in_website>
						  <show_in_store>1</show_in_store>
						</active_tablet>
						</fields>
				</amp_device>
            </groups>                
                           
        </harriswebworks_theme>
    </sections>
</config>