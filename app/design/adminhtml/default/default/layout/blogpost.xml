<?xml version="1.0"?>
<layout version="0.1.0">
    <blogpostadmin_blogpost_index>

        <reference name="head">
            <action method="addCss">
                <stylesheet>css/blog.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>bootstrap.min.css</stylesheet>
            </action>
            <action method="addJs">
                <script>jquery-3.3.1.min.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="blogpostadmin/blogpost" name="blogpost" template="blogpost/createpost.phtml" />

        </reference>
    </blogpostadmin_blogpost_index>
</layout>